/**
 * EcuacionLineal para un sistema de ecuaciones de 2 x 2.
 *  muestra el resultado de x e y, en su defecto... cero
 * @Author Juan Daniel Quispe Ramos
 * @version 1.0 26/08/2025
 */

public class EcuacionLineal {
    // toma 6 valores para el sistema de ecuaciones 2x2
    private double a,b,c,d,e,f;
    //verifica si el sistema tiene solucion
    public boolean tieneSolucion(){
        double r=0;
        r=(a*d-b*c);
        if(r!=0){
            return true;
        }else{
            return false;
        }
    }
    //retorna el valor de X del sistema
    public double getX(){
        double x=0;
        x=(e*d-b*f)/(a*d-b*c);
        return x;
    }
    //retorna el valor de Y del sistema
    public double getY(){
        double y=0;
        y=(a*f-e*c)/(a*d-b*c);
        return y;
    }
}

//METODO PRINCIPAL(MAIN)
public static void main(String[] args) {
        System.out.println("Ingrese a,b,c,d,e,f: ");
        Scanner sc=new Scanner(System.in);
        //guardando valores ingresados por el usuario
        double a = sc.nextDouble();
        double b = sc.nextDouble();
        double c = sc.nextDouble();
        double d = sc.nextDouble();
        double e = sc.nextDouble();
        double f = sc.nextDouble();
        //creando un objeto
        EcuacionLineal e1=new EcuacionLineal(a,b,c,d,e,f);
        System.out.println("tiene solucion?-->"+e1.tieneSolucion());
        if(e1.tieneSolucion()){
            System.out.println("X= "+e1.getX()+" ... Y= "+e1.getY());
        }else{
            System.out.println("La ecuacion no tiene solucion...");
        }
    }



//POO....
/**
 * EcuacionLineal para un sistema de ecuaciones de 2 x 2.
 *  muestra el resultado de x e y, en su defecto... cero
 * @Author Juan Daniel Quispe Ramos
 * @version 1.0 26/08/2025
 */

public class EcuacionLineal {
    // toma 6 valores double para este sistema de ecuaciones 2x2
    private double a,b,c,d,e,f;
    //Crea un constructor con argumentos para EcuacionLineal 
    public EcuacionLineal(double a,double b,double c,double d,double e,double f){
        this.a=a;this.b=b;this.c=c;this.d=d;this.e=e;this.f=f;
    }
    //verifica si el sistema tiene solucion
    public boolean tieneSolucion(){
        double r=0;
        r=(a*d-b*c);
        if(r!=0){
            return true;
        }else{
            return false;
        }
    }
    //retorna el valor de X double de este sistema
    public double getX(){
        double x=0;
        x=(e*d-b*f)/(a*d-b*c);
        return x;
    }
    //retorna el valor de Y double de este sistema
    public double getY(){
        double y=0;
        y=(a*f-e*c)/(a*d-b*c);
        return y;
    }
}

//METODO PRINCIPAL(MAIN)
public static void main(String[] args) {
        System.out.println("Ingrese a,b,c,d,e,f: ");
        Scanner sc=new Scanner(System.in);
        //guardando valores ingresados por el usuario
        double a = sc.nextDouble();
        double b = sc.nextDouble();
        double c = sc.nextDouble();
        double d = sc.nextDouble();
        double e = sc.nextDouble();
        double f = sc.nextDouble();
        //instanciando un objeto EcuacionLineal
        EcuacionLineal e1=new EcuacionLineal(a,b,c,d,e,f);
        System.out.println("tiene solucion?-->"+e1.tieneSolucion());
        //verificando si tiene solucion
        if(e1.tieneSolucion()){
            System.out.println("X= "+e1.getX()+" ... Y= "+e1.getY());
        }else{
            System.out.println("La ecuacion no tiene solucion...");
        }
    }
